<div class="d-flex justify-content-center mb-5 mt-2">
  <h1>Register New Account</h1>
</div>

<%= form_with model: @user do |form| %>
  <div class="mb-3">
    <%= form.label :email, class: "fs-5" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: "fs-5" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, class: "fs-5" %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :name, class: "fs-5" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: "fs-5" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :birthdate, class: "fs-5" %>
    <%= form.date_field :birthdate, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-center">
    <%= form.submit :class => "btn btn-primary mb-3" %>
  </div>
<% end %>

<div class="d-flex justify-content-center mt-2 mb-5">
  <a href="/users/new" class="fs-5">Already have an account? Login</a>
</div>
