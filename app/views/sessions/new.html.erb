<div class="d-flex justify-content-center mt-2">
  <h1>Hello</h1>
</div>
<div class="d-flex justify-content-center mb-5">
  <h5>Welcome to GoFundDis!</h5>
</div>

<%= form_with url: login_path do |form| %>
  <div class = "d-flex justify-content-center">
    <div class="mb-3 w-75">
      <%= form.text_field :email, placeholder: "Email", class: "form-control" %>
    </div>
  </div>
  <div class = "d-flex justify-content-center">
    <div class="mb-2 w-75">
      <%= form.text_field :password, placeholder: "Password", class: "form-control" %>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <%= form.submit "Sign In", class: "btn btn-primary mb-3 w-50" %>
  </div>
<%end%>

<div class="d-flex justify-content-center mt-4">
  <a href="/users/new" class="fs-5">Don't have account? Sign Up</a>
</div>


